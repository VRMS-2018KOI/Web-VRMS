<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Login Of ChatExample</title>
    </head>
    <body>
        <h4>
            <button onclick="document.getElementById('add').style.display='block'" style="width: auto; margin: 0; padding: 0 10.735px 0 10.735px">Add Device</button>
            <span>
                <% if(username) { %>
                    <%= username %>
                <% } %>
            </span>
            <div class="add">
                <div class="addForm">
                    <form id="addDevice" action="/profile/addDevice" method="POST">
                        <label>기기번호</label>
                        <input type="text" name="deviceNum">
                        <input type="submit">
                    </form>
                </div>
            </div>
            <div class="add">
                <form id="updatePassword" action="/profile/updatePassword" method="POST">
                    <div class="updateaForm">
                        <label>새로운 비밀번호</label>
                        <input type="text" name="newPassword">
                        <label>비밀번호 확인</label>
                        <input type="text" name="confirmPassword">
                        <input type="submit">
                    </div>
                </form>
            </div>
            <div class="admin">
                <span><a href="/adminAuth">관리자 인증 받기</a></span>
            </div>
	    <% if (danger === true) { %>
		<div class="isDanger">
			<form action="/profile/safe" method="post">
				<input type="submit" value="안전" />
			</form>
		</div>
        <% } %>
        <div class="thx">
            <a href="/getpoint">getpoint</a>
        </div>
        <script>
        </script>
    </body>
</html>
